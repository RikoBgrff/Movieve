<UserControl x:Class="Movieve.Views.MovieHomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Movieve.Views"
             Height="260"
             Width="130"
             x:Name="HomePageUc">
    <Grid Background="#182130">
        <Image Source="{Binding Poster}" 
               Stretch="Fill"
               Margin="10,10,10,87"/>
        <TextBox Text="{Binding Title}" 
                   FontFamily="Mohave Medium Italic" Margin="10,178,18,53" Foreground="White" FontSize="15" Background="Transparent" IsInactiveSelectionHighlightEnabled="True" IsReadOnly="True"></TextBox>
        <TextBlock Text="{Binding Genre}" 
                   FontFamily="Mohavie Medium" Margin="10,220,10,10" FontSize="10" Foreground="White"></TextBlock>

    </Grid>
</UserControl>
