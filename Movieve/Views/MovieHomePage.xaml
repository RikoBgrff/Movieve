<UserControl x:Class="Movieve.Views.MovieHomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Movieve.Views"
             Height="260"
             Width="130"
             x:Name="HomePageUc">
    <Border BorderBrush="#673AB7" BorderThickness="1">

        <Grid Background="Black">
            <Border BorderBrush="#673AB7" BorderThickness="2"  Margin="10,10,10,87">
                <Image Source="{Binding Poster}" 
               Stretch="Fill"
               />
            </Border>
            <Grid>
                <TextBlock Text="{Binding Title}" 
                   FontFamily="Mohave Medium Italic" Margin="10,178,18,46"  Foreground="White" FontSize="15" TextWrapping="WrapWithOverflow" Background="Transparent">
                </TextBlock>
                <local:Underline Margin="10,214,18,42"></local:Underline>
            </Grid>
            <TextBlock Text="{Binding Genre}" 
                   FontFamily="Mohavie Medium" Margin="10,220,10,10" FontSize="10" Foreground="White"></TextBlock>
        </Grid>
    </Border>
</UserControl>
